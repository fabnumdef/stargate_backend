{
  "extends": ["airbnb-base", "plugin:flowtype/recommended"],
  "plugins": ["flowtype"],
  "env": {
    "node": true,
    "jest": true
  },
  "settings": {
    "flowtype": {
      "onlyFilesWithFlowAnnotation": true
    }
  },
  "rules": {
    "no-underscore-dangle": ["error", { "allow": ["_id", "__v"] }],
    "max-len": ["error", { "code": 120 }]
  }
}
